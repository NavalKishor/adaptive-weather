<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weather_grid_background">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp" android:layout_height="161dp"
        app:srcCompat="@drawable/ic_moon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="60dp" android:layout_height="161dp"
        app:srcCompat="@drawable/ic_fog"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp" android:layout_marginRight="10dp"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp" android:layout_height="163dp"
        app:srcCompat="@drawable/ic_rain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/appCompatImageView"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_height="163dp"
        app:srcCompat="@drawable/ic_cloudnight"
        android:layout_width="60dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="60dp" android:layout_height="163dp"
        app:srcCompat="@drawable/ic_cloudday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/appCompatImageView2"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="60dp" android:layout_height="161dp"
        app:srcCompat="@drawable/ic_sun"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"/>

</android.support.constraint.ConstraintLayout>
